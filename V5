# Library imports
from vex import *
Veloity = 0

Controller = Controller()

LeftSideVelocity = 0
RightSideVelocity = 0
DriveModeSelected = "Normal"
Precision = 0

#Left Motors
FrontLeftMotor = Motor(Ports.PORT4, False)
MiddleLeftMotor = Motor(Ports.PORT2, False)
BackLeftMotor = Motor(Ports.PORT1, False)

#Right Motors
FrontRightMotor = Motor(Ports.PORT3, False)
MiddleRightMotor = Motor(Ports.PORT5, False)
BackRightMotor = Motor(Ports.PORT6, False)


def SpinLeftMotorsSetDist(Amount, Unit, Velocity):
        
    FrontLeftMotor.set_velocity(Velocity, PERCENT)
    MiddleLeftMotor.set_velocity(Velocity, PERCENT)
    BackLeftMotor.set_velocity(Velocity, PERCENT)
    
    if Velocity >= 0:
        Direction = "FORWARD"
    if Velocity < 0:
        Direction = "BACKWARD"

    FrontLeftMotor.spin_for(Direction, Amount, Unit)
    MiddleLeftMotor.spin_for(Direction, Amount, Unit)
    BackLeftMotor.spin_for(Direction, Amount, Unit)

def SpinRightMotorsSetDist(Amount, Unit, Velocity):
        
    FrontRightMotor.set_velocity(Velocity, PERCENT)
    MiddleRightMotor.set_velocity(Velocity, PERCENT)
    BackRightMotor.set_velocity(Velocity, PERCENT)
    
    if Velocity >= 0:
        Direction = "FORWARD"
    if Velocity < 0:
        Direction = "BACKWARD"

    FrontRightMotor.spin_for(Direction, Amount, Unit)
    MiddleRightMotor.spin_for(Direction, Amount, Unit)
    BackRightMotor.spin_for(Direction, Amount, Unit)


def SpinLeftMotorsUntil(Velocity):
    
    Direction = ""

    FrontLeftMotor.set_velocity(Velocity, PERCENT)
    MiddleLeftMotor.set_velocity(Velocity, PERCENT)
    BackLeftMotor.set_velocity(Velocity, PERCENT)
    
    if Velocity >= 0:
        Direction = "FORWARD"
    if Velocity < 0:
        Direction = "BACKWARD"

    FrontLeftMotor.spin(Direction)
    MiddleLeftMotor.spin(Direction)
    BackLeftMotor.spin(Direction)

def SpinRightMotorsUntil(Velocity):
        
    FrontRightMotor.set_velocity(Velocity, PERCENT)
    MiddleRightMotor.set_velocity(Velocity, PERCENT)
    BackRightMotor.set_velocity(Velocity, PERCENT)
    
    if Velocity >= 0:
        Direction = "FORWARD"
    if Velocity < 0:
        Direction = "BACKWARD"

    FrontRightMotor.spin(Direction)
    MiddleRightMotor.spin(Direction)
    BackRightMotor.spin(Direction)

def StopLeftMotors():
    FrontLeftMotor.stop()
    MiddleLeftMotor.stop()
    BackLeftMotor.stop()

def StopRightMotors():
    FrontRightMotor.stop()
    MiddleRightMotor.stop()
    BackRightMotor.stop()

def FindLeftJoystickVelocity(JoystickPosition, NumberToRoundTo):
    return int(NumberToRoundTo * round(float(JoystickPosition)/NumberToRoundTo))

def FindRightJoystickVelocity(JoystickPosition, NumberToRoundTo):
    return int(NumberToRoundTo * round(float(JoystickPosition)/NumberToRoundTo))


# Begin project code

def SelectDroveMode(ButtonPressed):
    global DriveModeSelected
    if ButtonPressed == "A":
        DriveModeSelected = "Normal"
    if ButtonPressed == "B"
        DriveModeSelected = "Rotational"


def NormalDrive():
    LeftSideVelocity = FindLeftJoystickVelocity(controller_1.axis3, 20)
    RightSideVelocity = FindRightJoystickVelocity(controller_1.axis2, 20)

    if LeftSideVelocity != 0 or RightSideVelocity != 0:
        SpinLeftMotorsUntil(LeftSideVelocity)
        SpinRightMotorsUntil(RightSideVelocity)

    if RightSideVelocity == 0 and RightSideVelocity == 0:
        StopLeftMotors()
        StopRightMotors()

def RotationDrive():
    RotationalVelocity = 0
    LeftSideVelocity = FindLeftJoystickVelocity(controller_1.axis3, 1)
    RightSideVelocity = FindRightJoystickVelocity(controller_1.axis2, 1)

    if RotationalVelocity != 0 and LeftSideVelocity > RightSideVelocity:
        RotationalVelocity = abs((LeftSideVelocity / 2) - (RightSideVelocity / 2))
        SpinLeftMotorsUntil(RotationalVelocity)
        SpinRightMotorsUntil(-1 * (RotationalVelocity))

    if RotationalVelocity != 0 and RightSideVelocity > LeftSideVelocity:
        RotationalVelocity = abs((RightSideVelocity / 2) - (LeftSideVelocity / 2))
        SpinRightMotorsUntil(RotationalVelocity)
        SpinLeftMotorsUntil(-1 * (RotationalVelocity))

    if RotationalVelocity == 0:
        StopLeftMotors()
        StopRightMotors()


#Check If For Spinning Motors I Need Direction


def pre_autonomous():
    # actions to do when the program starts
    brain.screen.clear_screen()
    brain.screen.print("pre auton code")
    wait(1, SECONDS)

def autonomous():
    brain.screen.clear_screen()
    brain.screen.print("autonomous code")
    # place automonous code here

def user_control():
    brain.screen.clear_screen()
    # place driver control in this while loop
    while True:
        wait(20, MSEC)
        
        controller_1.ButtonA.pressed(SelectDroveMode("A"))
        controller_1.ButtonB.pressed(SelectDroveMode("B"))

        if DriveModeSelected == "Normal"
            NormalDrive()
        if DriveModeSelected == "Rotational"
            RotationDrive()
        

# create competition instance
comp = Competition(user_control, autonomous)
pre_autonomous()
